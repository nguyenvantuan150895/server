                                    <h3 class="login-box-msg">Edit Campaign</h3>

                                    <!-- <form > -->
                                        <div class="col-md-12">
                                            <div class="col-md-6">
                                                <div class="form-group">
                                                    <label for="firstname">User Name:</label>
                                                    <input type="text" class="form-control" id="idusername" placeholder="Enter user name"
                                                        name="username" autocomplete="off" value="<%=username%>" />
                                                </div>
                                                <div class="form-group">
                                                    <label for="firstname">Name Campaign:</label>
                                                    <input type="text" class="form-control" id="idname" placeholder="Enter name campaign"
                                                        name="name" autocomplete="off" value="<%=name%>" />
                                                </div>
                                                <div class="form-group">
                                                    <label>Url Original:</label>
                                                    <input type="text" class="form-control" id="idoldUrl" placeholder="Enter UrlOriginal"
                                                        name="oldUrl" autocomplete="off" value="<%=oldUrl%>" />
                                                </div>
                                                <div>
                                                    <!-- date picker -->
                                                    <label>Start time:</label>
                                                    <input type="text" id="idstart" name='start' class="form-control col-md-10 datepicker"
                                                        id="datepicker" ng-required="true" placeholder="MM/DD/YYYY"
                                                        value="<%=start%>">
                                                    <br> <br> <br>
                                                    <label>End time:</label>
                                                    <input type="text" id="idend" name='end' class="form-control col-md-10 datepicker"
                                                        id="datepicker2" ng-required="true" placeholder="MM/DD/YYYY"
                                                        value="<%=end%>">
                                                    <!-- end date picker -->
                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <div class="form-group">
                                                    <div class="form-group">
                                                        <label>Url for email:</label>
                                                        <input type="text" class="form-control" id="idemail" name="email"
                                                            value="<%=email%>" />
                                                    </div>
                                                    <div class="form-group">
                                                        <label>Url for sms:</label>
                                                        <input type="text" class="form-control" id="idsms" name="sms"
                                                            value="<%=sms%>" />
                                                    </div>
                                                    <div class="form-group">
                                                        <label>Url for other:</label>
                                                        <input type="text" class="form-control" id="idother" name="other"
                                                            value="<%=other%>" />
                                                    </div>
                                                </div>
                                                <div class="form-group">
                                                    <label>Url for facebook:</label>
                                                    <% for (let i = 0; i < fb.length ;  i++) { %>
                                                    <br>
                                                    <input type="text" value="<%=faGroup[i]%>" class="group" style = "color: blue; font-weight: bold">
                                                    <input type="text" class="form-control fb" value="<%=fb[i]%>" name="other" />
                                                    <% } %>
                                                </div>
                                            </div>
